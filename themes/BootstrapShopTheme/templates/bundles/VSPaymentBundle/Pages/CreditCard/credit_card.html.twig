{% endblock content %}

{% block stylesheets %}
    {{ parent() }}
    
    {% include '@VSPayment/Pages/CreditCard/Partial/credit_card_css.html.twig' %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    
    {# #}
    <script type="text/javascript" src="https://js.stripe.com/v2/"></script>
    
    {{ encore_entry_script_tags( 'js/credit-card', null, 'BootstrapShopTheme'  ) }}
