{% block content %}
    <div class="padding">
    	<div class="row">
    		<div class="col-sm-6">
                
                {% include '@VSPayment/Pages/CreditCard/Partial/CreditCardForm.html.twig' with {
                     'formAction': '',
                     'formMethod': 'POST'
                } %}
