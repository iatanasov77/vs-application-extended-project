    {{ form_errors(form) }}
     
    {{ form_start(form, { 'attr': {'class': 'login-form '} }) }}
        <h4>Your Account</h4>

        <div class="control-group">
            {{ form_label(form.email, null, {
                'label_attr': {'class': 'control-label'}
                }) 
            }}
            <div class="controls">
                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': form.email.vars.label|trans }}) }}
            </div>
        </div>
        
        <div class="control-group">
            {{ form_label(form.plain_password.first, null, {
                'label_attr': {'class': 'control-label'}
                }) 
            }}
            <div class="controls">
                {{ form_widget(form.plain_password.first, {'attr': {'class': 'form-control', 'placeholder': form.plain_password.first.vars.label|trans }}) }}
            </div>
        </div>
        
        <div class="control-group">
            {{ form_label(form.plain_password.second, null, {
                'label_attr': {'class': 'control-label'}
                }) 
            }}
            <div class="controls">
                {{ form_widget(form.plain_password.second, {'attr': {'class': 'form-control', 'placeholder': form.plain_password.second.vars.label|trans }}) }}
            </div>
        </div>
        
        <h4>Your User Additional Info</h4>
        
        <div class="control-group">
            {{ form_label(form.title, null, {
                'label_attr': {'class': 'control-label'}
                }) 
            }}
            <div class="controls">
                {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': '-' }}) }}
            </div>
        </div>
        
        <div class="control-group">
            {{ form_label(form.firstName, null, {
                'label_attr': {'class': 'control-label'}
                }) 
            }}
            <div class="controls">
                {{ form_widget(form.firstName, {'attr': {'class': 'form-control', 'placeholder': form.firstName.vars.label|trans }}) }}
            </div>
        </div>
        
        <div class="control-group">
            {{ form_label(form.lastName, null, {
                'label_attr': {'class': 'control-label'}
                }) 
            }}
            <div class="controls">
                {{ form_widget(form.lastName, {'attr': {'class': 'form-control', 'placeholder': form.lastName.vars.label|trans }}) }}
            </div>
        </div>
        
        <div class="control-group">
            {{ form_label(form.birthday, null, {
                'label_attr': {'class': 'control-label'}
                }) 
            }}
            <div class="controls">
                {{ form_widget(form.birthday.day, { attr: { 'class': 'span1' } }) }}
                {{ form_widget(form.birthday.month, { attr: { 'class': 'span1' } }) }}
                {{ form_widget(form.birthday.year, { attr: { 'class': 'span1' } }) }}
            </div>
        </div>

        <div class="alert alert-block alert-error fade in">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <strong>Lorem Ipsum is simply</strong> dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s
        </div>
        
        
        <div class="control-group">
            {{ form_label(form.country, null, {
                'label_attr': {'class': 'control-label'}
                }) 
            }}
            <div class="controls">
                {{ form_widget(form.country, {'attr': {'class': 'form-control', 'data-urlGetStates': '/get-states-for-country/' }}) }}
            </div>
        </div>
        
        <div class="control-group">
            {{ form_label(form.state, null, {
                'label_attr': {'class': 'control-label'}
                }) 
            }}
            <div class="controls">
                {{ form_widget(form.state, {'attr': {'class': 'form-control' }}) }}
            </div>
        </div>
        
        <div class="control-group">
            {{ form_label(form.city, null, {
                'label_attr': {'class': 'control-label'}
                }) 
            }}
            <div class="controls">
                {{ form_widget(form.city, {'attr': {'class': 'form-control', 'placeholder': form.city.vars.label|trans }}) }}
            </div>
        </div>
        
        <div class="control-group">
            {{ form_label(form.address, null, {
                'label_attr': {'class': 'control-label'}
                }) 
            }}
            <div class="controls">
                {{ form_widget(form.address, {'attr': {'class': 'form-control', 'placeholder': form.address.vars.label|trans }}) }}
            </div>
        </div>
        
        <div class="control-group">
            {{ form_label(form.zip, null, {
                'label_attr': {'class': 'control-label'}
                }) 
            }}
            <div class="controls">
                {{ form_widget(form.zip, {'attr': {'class': 'form-control', 'placeholder': form.zip.vars.label|trans }}) }}
            </div>
        </div>
        
        <div class="control-group">
            {{ form_label(form.phone, null, {
                'label_attr': {'class': 'control-label'}
                }) 
            }}
            <div class="controls">
                {{ form_widget(form.phone, {'attr': {'class': 'form-control', 'placeholder': form.phone.vars.label|trans }}) }}
            </div>
        </div>
        
        <div class="control-group">
            {{ form_label(form.mobile, null, {
                'label_attr': {'class': 'control-label'}
                }) 
            }}
            <div class="controls">
                {{ form_widget(form.mobile, {'attr': {'class': 'form-control', 'placeholder': form.mobile.vars.label|trans }}) }}
            </div>
        </div>
        
        <div class="form-group" style="margin: 20px 0 20px 0;">
            <label class="custom-control custom-checkbox">
                <input type="checkbox" style="margin: 0 5px 0 0;"
                    class="custom-control-input"
                    required="required"
                />
                <span class="custom-control-label">
                    By creating an account, you agree the 
                    <a href="#terms-and-conditions-modal" data-toggle="modal" style="color: green;">
                        terms and conditions
                    </a>
                </span>
            </label>
        </div>
                    
        <p><sup>*</sup>Required field   </p>
    
        <div class="control-group">
            <div class="controls">
                {{ form_widget(form.btnRgister, {'attr': {'class': 'btn btn-large btn-success'}}) }}
            </div>
        </div>      
    {{ form_end(form, {'render_rest': false}) }}
{% endblock %}

{% block widgets %}    
    {% include 'Modal/terms_and_conditions.html.twig' %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags( 'js/register', null, 'BootstrapShopTheme'  ) }}
{% endblock %}

