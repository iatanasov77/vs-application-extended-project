{% extends "base.html.twig" %}

{% block content %}  
    <div class="login-wrap">
        <h1>Registration</h1>
        <p>{{ 'registration.confirmed' | trans({'%username%': user.username}) }}</p>
        {% if targetUrl %}
            <p><a href="{{ targetUrl }}">{{ 'registration.back' | trans }}</a></p>
        {% else %}
            <p><a href="{{ path('app_home') }}">Go to Home Page</a></p>
        {% endif %}
    </div>
{% endblock content %}
